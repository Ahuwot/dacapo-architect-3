# DaCapo Architect 3.0 - API Configuration

# LLM Provider: openai | perplexity | comet
LLM_PROVIDER=openai

# OpenAI Configuration (gpt-4o-mini recommended - cheapest)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=8000
OPENAI_TEMPERATURE=0.2

# Perplexity Configuration (sonar models)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar

# Comet Assisted Mode (requires comet_bridge.py running)
COMET_BRIDGE_URL=http://localhost:8765

# Advanced Settings
MAX_RETRIES=3
RETRY_DELAY=2
